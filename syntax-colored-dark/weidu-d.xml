      <!-- Emulation of the Notepad++ color scheme for WeiDU files -->
      <itemData name="Normal Text"  defStyleNum="dsNormal"        color="#FFFFFF"               spellChecking="false" />
      <itemData name="Comment"      defStyleNum="dsComment"       color="#70A63A" italic="true" />
      <itemData name="String"       defStyleNum="dsString"        color="#FFCACA" />
      <itemData name="Token"        defStyleNum="dsChar"          color="#B66CFF"               spellChecking="false" />
      <itemData name="Substitution" defStyleNum="dsSpecialString" color="#FF4040" italic="true" spellChecking="false" />
      <itemData name="Symbol"       defStyleNum="dsOperator"      color="#C993FF"               spellChecking="false" />
      <itemData name="TraRef"       defStyleNum="dsDataType"      color="#7575FF" bold="true"   spellChecking="false" />
      <itemData name="Decimal"      defStyleNum="dsDecVal"        color="#B76FFF"               spellChecking="false" />
      <itemData name="Bin"          defStyleNum="dsBaseN"         color="#B76FFF"               spellChecking="false" />
      <itemData name="Oct"          defStyleNum="dsBaseN"         color="#B76FFF"               spellChecking="false" />
      <itemData name="Hex"          defStyleNum="dsBaseN"         color="#B76FFF"               spellChecking="false" />
      <itemData name="Action"       defStyleNum="dsBuiltIn"       color="#FF6262" bold="true"   spellChecking="false" />
      <itemData name="When"         defStyleNum="dsControlFlow"   color="#7575FF" bold="true"   spellChecking="false" />
      <itemData name="Epilogue"     defStyleNum="dsAttribute"     color="#7575FF" bold="true"   spellChecking="false" />
      <itemData name="State"        defStyleNum="dsFunction"      color="#FF62FF"               spellChecking="false" />
      <itemData name="Diagnostic"   defStyleNum="dsAlert"         color="#FF8040" bold="true"   spellChecking="false" />
      <itemData name="Error"        defStyleNum="dsError"         color="#FF0000" bold="true"   spellChecking="false" />
    </itemDatas>
  </highlighting>

  <general>
    <comments>
      <comment name="singleLine" start="//" position="afterwhitespace" />
      <comment name="multiLine" start="/*" end="*/" region="Comment" />
    </comments>
    <keywords casesensitive="1" weakDeliminator=".[]{}\" additionalDeliminator="&quot;'`$" />
  </general>
</language>
